{
	"config":
	{
		"bin-dir": "app/ext/bin",
		"cache-dir": "app/ext/cache",
		"vendor-dir": "app/ext/lib"
	},
	
    "require":
    {
        "twig/twig": "1.*",
        "pear/services_json": "dev-trunk",
        "pear/pear_exception": "dev-master",
        "westie/outrageweb": "dev-master"
    },
    
    "repositories":
    [
    	{
    		"type": "git",
    		"url": "https://git.typefish.co.uk/Westie/outrageweb.git"
    	},
    	
    	{
    		"type": "git",
    		"url": "git@github.com:pear/Services_JSON.git"
    	},
    	
    	{
    		"type": "git",
    		"url": "git@github.com:pear/PEAR_Exception.git"
    	}
    ],
    
	"autoload":
	{
		"psr-4": { "OUTRAGEdns\\": "app/lib/OUTRAGEdns" }
	},
    
    "scripts":
    {
        "post-update-cmd":
        [
            "ls app/cache/blocks && rm -rf app/cache/blocks/*",
            "ls app/cache/templates && rm -rf app/cache/templates/*"
        ]
    }
}
