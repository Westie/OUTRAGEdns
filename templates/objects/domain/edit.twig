{% import "/includes/macros/form.twig" as forms %}

<h1>Add a new Zone</h1>

<form class="form-horizontal" method="POST">
	<article class="content-wrapper">
		<fieldset>
			<legend>Template Information</legend>
			
			{{ forms.text({   title: "Name",     field: "name",          value: content.name  }) }}
			{{ forms.select({ title: "Type",     field: "type",          value: content.type,               tuple: config.records.synctypes }) }}
			{{ forms.select({ title: "Template", field: "zone_templ_id", value: content.zone.zone_templ_id, tuple: templates }) }}
		</fieldset>
	</article>
	
	{% if content.id is not empty %}
		<table class="grid-table">
			<thead>
				<tr>
					<th>Name</th>
					<th>Type</th>
					<th>Value</th>
					<th>Priority</th>
					<th>TTL</th>
					<th>Actions</th>
				</tr>
			</thead>
			
			<tbody>
				{% for record in content.records %}
					{% include "objects/record/grid-item.twig" with { content: record } %}
				{% endfor %}
				
				{% include "objects/record/grid-item.twig" with { content: null } %}
			</tbody>
		</table>
	{% endif %}
	
	<div class="pull-right">
		<button class="btn btn-primary" type="submit" name="commit" value="now">Update template</button>
	</div>
</form>