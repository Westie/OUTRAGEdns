{% import "/includes/macros/form.twig" as forms %}

<h1>List all zones/domains</h1>

<form class="form-horizontal" method="POST">
	<table class="grid-table">
		<thead>
			<tr>
				<th class="check"></th>
				
				{% if godmode %}
					<th>Owner</th>
				{% endif %}
				
				<th>Name</th>
				<th>Type</th>
				<th>No. of records</th>
				<th class="actions">Actions</th>
			</tr>
		</thead>
		
		<tbody>
			{% for domain in domains %}
				{% include "objects/domain/grid-item.twig" with { content: domain } %}
			{% endfor %}
		</tbody>
	</table>
	
	<a class="button pull-right" href="{{ content.actions.add }}">Add domain</a>
</form>