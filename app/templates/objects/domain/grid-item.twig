{% if index is not defined %}
	{% set index = null %}
{% endif %}

<tr{% if class is defined %} class="{{ class|e }}"{% endif %}>
	<td class="check">
		<input type="checkbox" name="selected[]" value="{{ content.id }}" />
	</td>
	
	{% if godmode %}
		<td>
			{{ content.user.username }}
		</td>
	{% endif %}
	
	<td>
		{{ content.name }}
	</td>
	
	<td>
		{{ content.type }}
	</td>
	
	<td>
		{% if content.serial == "0" %}
			&mdash;
		{% else %}
			{{ content.serial }}
		{% endif %}
	</td>
	
	<td>
		{{ content.records_no }}
	</td>
	
	<td class="actions">
		<ul class="tiny">
			<li>
				<a href="{{ content.actions.edit }}" class="tooltip" title="Edit">
					<i class="fa fa-edit"></i>
				</a>
			</li>
			
			<li>
				<a href="{{ content.actions.revisions }}" class="tooltip" title="Revisions">
					<i class="fa fa-history"></i>
				</a>
			</li>
			
			<li>
				<a href="{{ content.actions.test }}" class="tooltip" title="Test against external nameservers">
					<i class="fa fa-globe"></i>
				</a>
			</li>
			
			<li class="remove">
				<a href="{{ content.actions.remove }}" class="tooltip" title="Remove">
					<i class="fa fa-trash-o"></i>
				</a>
			</li>
		</ul>
	</td>
</tr>